{% extends "base.html" %}

{% block content %}
    <h1>Done signals</h1>
    <table>
        <tr>
            <td>id</td>
            <td>Branch</td>
            <td>Ward</td>
            <td>Bed</td>
            <td>Datetime</td>
            <td>Status</td>
        </tr>
        {% for alarm in alarms %}
        {% if alarm.status == 'done' %}
        <tr>
            <td> {{ alarm.id }} </td>
            <td> {{ alarm.bed.ward.branch.name }} </td>
            <td> {{ alarm.bed.ward.name }} </td>
            <td> {{ alarm.bed_id }} </td>
            <td> {{ alarm.datetime.strftime('%Y-%m-%d %H:%M:%S') }} </td>
            <td> {{ alarm.status }} </td>
        </tr>
        {% endif %}
        {% endfor %}
    </table>

<form action="" method="post" novalidate>
    <input type="submit" name="update" value="Update"><br>
    <input type="submit" name="clear" value="Clear">
</form>
<a href="/display">ALARM SIGNALS</a>

{% endblock %}